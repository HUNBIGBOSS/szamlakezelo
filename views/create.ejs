          <div class="col-xl-4" style="text-align: right;">
            <label><b>Összesen</b></label>
          </div>
          <div class="col-xl-2" style="text-align: center;">
            <b>
            <% if (b_ar.length > 0) { %>
          <%= b_ar %>
          <% } %>
            </b>
          </div>
          <div class="col-xl-2" style="text-align: center;">
            <b>
            <% if (b_afa.length > 0) { %>
          <%= b_afa %>
