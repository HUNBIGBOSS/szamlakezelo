  <form id = "createform" role = "form" action="/create" method="post" accept-charset="utf-8" onSubmit="return checkblank(this);">
      <div class="col-xl-12" style="border: 1px solid black;">
        <hr style="border-top: 2px solid black; margin: 0; margin-top: 10px;">
        <div class="row align-items-center" id="fejlec" style="height: 45px;">
          <div class="col-xl-8"><h2><b>Számla</b></h2></div>
